<resources>

    <!-- Base app theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="popupMenuStyle">@style/AppPopupMenu</item>
    </style>

    <!-- Custom popup menu style -->
    <style name="AppPopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupMenuStyle">@style/PopupMenuTextStyle</item>
    </style>

    <!-- Text color for popup menu items -->
    <style name="PopupMenuTextStyle" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">#000000</item> <!-- Black text -->
    </style>

</resources>
